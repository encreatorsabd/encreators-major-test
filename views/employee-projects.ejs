<%- include('layouts/header') %>



<section class="mx-auto w-full max-w-7xl px-4 py-4 ">
    <div class="">
        <div class="flex flex-col space-y-4 md:flex-row md:items-center md:justify-between md:space-y-0">
            <div>
                <h2 class="text-3xl font-bold text-black">My Projects</h2>
            </div>
        </div>
        <div class="mt-6 flex flex-col">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <div class="overflow-hidden border border-2 border-gray-800 md:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-800 bg-zinc-950 text-white">
                            <thead class="bg-zinc-950">
                                <tr>
                                    <th scope="col" class="px-4 py-3.5 text-left text-sm font-normal">
                                        <span>Project</span>
                                    </th>
                                    <th scope="col" class="px-4 py-3.5 text-left text-sm font-normal">
                                        Client
                                    </th>
                                    <th scope="col" class="px-4 py-3.5 text-left text-sm font-normal">
                                        Contact
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-800">
                                <% employeeProjects.forEach((project, index)=> { %>
                                    <tr>
                                        <td class="whitespace-nowrap px-4 py-4">
                                            <div class="flex items-center">
                                                <div class="">
                                                    <div class="text-sm font-medium">
                                                        <%= project.serviceName %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="whitespace-nowrap px-4 py-4">
                                            <div class="text-sm">
                                                <%= project.clientEmail %>
                                            </div>
                                        </td>
                                        <td class="whitespace-nowrap px-4 py-4">
                                            <div class="text-sm">
                                                <%= project.employeePhone %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<%- include('layouts/footer') %>
